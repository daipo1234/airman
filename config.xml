<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.awp" version="2.2.9" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>자랑스러운 공군</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="Fullscreen" value="false" />
    <preference name="orientation" value="portrait" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="5000" />
    <preference name="FadeSplashScreenDuration" value="1500" />
    <preference name="SplashMaintainAspectRatio" value="false" />
    <preference name="largeHeap" value="true" />
    <preference name="android-targetSdkVersion" value="33" />

    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="xxxhdpi" src="res/android/xxxhdpi/appicon.png" />
        <splash density="land-hdpi" src="platforms/android/res/drawable-land-hdpi/fff.png" />
        <splash density="land-ldpi" src="platforms/android/res/drawable-land-ldpi/fff.png" />
        <splash density="land-mdpi" src="platforms/android/res/drawable-land-mdpi/fff.png" />
        <splash density="land-xhdpi" src="platforms/android/res/drawable-land-xhdpi/fff.png" />
        <splash density="port-hdpi" src="platforms/android/res/drawable-port-hdpi/fff.png" />
        <splash density="port-ldpi" src="platforms/android/res/drawable-port-ldpi/fff.png" />
        <splash density="port-mdpi" src="platforms/android/res/drawable-port-mdpi/fff.png" />
        <splash density="port-xhdpi" src="platforms/android/res/drawable-port-xhdpi/fff.png" />
        <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application/activity">
            <activity android:exported="true"/>
        </edit-config>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />

        <icon src="res/ios/icon-60.png" width="60" height="60" />
        <icon src="res/ios/icon-60@2.png" width="120" height="120" />
        <icon src="res/ios/icon-76.png" width="76" height="76" />
        <icon src="res/ios/icon-76@2.png" width="152" height="152" />
        <icon src="res/ios/icon-57.png" width="57" height="57" />
        <icon src="res/ios/icon-57@2.png" width="114" height="114" />
        <icon src="res/ios/icon-72.png" width="72" height="72" />
        <icon src="res/ios/icon-72@2.png" width="144" height="144" />

        <splash src="res/ios/launch/iphone4_ios7.jpg" width="640" height="960"/>
        <splash src="res/ios/launch/ipad_ios7_portrait.jpg" width="768" height="1024"/>
        <splash src="res/ios/launch/ipad_2x_ios7_portrait.jpg" width="1536" height="2048"/>
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="~1.3.2" />
    <plugin name="cordova-plugin-proguard" spec="~1.0.0" />
    <preference name="DisallowOverscroll" value="true" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
    <engine name="android" spec="~6.3.0" />
    <engine name="windows" spec="^6.0.1" />
    <engine name="browser" spec="^5.0.4" />
</widget>
